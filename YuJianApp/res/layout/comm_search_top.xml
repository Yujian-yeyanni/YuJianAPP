<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/comm_top_height"
    android:background="@color/bg_search_color"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_comm_top_menu"
        style="@style/style_comm_top_imageview"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/standard_margin"
        android:background="@drawable/ic_launcher" />

    <EditText
        android:id="@+id/et_comm_top_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_top_search_height"
        android:layout_toLeftOf="@+id/iv_comm_top_personal"
        android:layout_toRightOf="@id/iv_comm_top_menu"
        android:imeOptions="actionSearch" />

    <ImageView
        android:id="@+id/iv_comm_top_personal"
        style="@style/style_comm_top_imageview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/standard_margin"
        android:background="@drawable/ic_launcher" />

</RelativeLayout>