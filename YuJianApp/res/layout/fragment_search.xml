<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_house_list"
        layout="@layout/comm_search_top" />

    <RelativeLayout
        android:id="@+id/rl_search_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_apartment_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_search_area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_area" />

            <TextView
                android:id="@+id/tv_search_rent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/str_rent" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>