<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="layout_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_fill_parent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="style_text_on_viewpaget" parent="@style/layout_wrap_content" >
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>
    
    <style name="style_text_house_desc" parent="@style/layout_wrap_content">
        <item name="android:layout_height">29dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>
    
    <style name="style_text_house_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="style_vertical_line">
        <item name="android:layout_width">@dimen/line_height_or_width</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/color_house_list_border</item>
    </style>
    
    <style name="style_horizontal_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_height_or_width</item>
        <item name="android:background">@color/color_house_list_border</item>
    </style>
    
    <style name="style_comm_top_imageview">
        <item name="android:layout_width">@dimen/comm_top_search_width</item>
        <item name="android:layout_height">@dimen/comm_top_search_height</item>
    </style>
</resources>